{
  "name": "@ScaffoldStack/dev-wizard-ui-terminal",
  "version": "0.0.8",
  "private": false,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://npm.pkg.github.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ScaffoldStack/dev-wizard-ui-terminal.git"
  },
  "scripts": {
    "build": "pnpm exec tsc -p tsconfig.build.json --pretty false --incremental --tsBuildInfoFile /home/math/projects/dev-workspace/.dev-wizard/cache/tsbuildinfo/_ScaffoldStack_dev-wizard-ui-terminal.tsbuildinfo",
    "clean": "rimraf dist",
    "lint": "eslint src --ext .ts --max-warnings=0",
    "prepublishOnly": "pnpm run build",
    "test": "pnpm exec vitest run --passWithNoTests --config /home/math/projects/dev-workspace/packages/dev-wizard-ui-terminal/vitest.config.ts",
    "typecheck": "tsc -p tsconfig.test.json",
    "build:quick": "pnpm exec tsc -p tsconfig.build.json --pretty false --incremental --tsBuildInfoFile /home/math/projects/dev-workspace/.dev-wizard/cache/tsbuildinfo/_ScaffoldStack_dev-wizard-ui-terminal.tsbuildinfo",
    "build:turbo": "TURBO_TS_CONFIG=tsconfig.build.json pnpm dlx turbo run build --filter @ScaffoldStack/dev-wizard-ui-terminal || pnpm exec tsc -p tsconfig.build.json --pretty false --incremental --tsBuildInfoFile /home/math/projects/dev-workspace/.dev-wizard/cache/tsbuildinfo/_ScaffoldStack_dev-wizard-ui-terminal.tsbuildinfo",
    "test:quick": "pnpm exec vitest run --passWithNoTests --changed --config /home/math/projects/dev-workspace/packages/dev-wizard-ui-terminal/vitest.config.ts",
    "test:turbo": "pnpm dlx turbo run test --filter @ScaffoldStack/dev-wizard-ui-terminal"
  },
  "dependencies": {
    "@clack/core": "^0.5.0",
    "@clack/prompts": "^0.11.0",
    "@ScaffoldStack/dev-wizard-engine": "workspace:*",
    "chalk": "^5.6.2",
    "picocolors": "^1.1.1"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "rimraf": "^6.1.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  }
}
